<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/activity_detailed"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seagate.pharmacyratingreciever.DetailedActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/constraintLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ratingBar"
            app:layout_constraintTop_toTopOf="@+id/ratingBar"
            app:layout_constraintBottom_toBottomOf="@+id/ratingBar"/>

        <RatingBar

            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/branch"
            android:layout_marginTop="8dp"/>

        <TextView

            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t4"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/p4"
            app:layout_constraintBottom_toBottomOf="@+id/p4"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_star"
            android:id="@+id/imageView"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/ratesNumber"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_star"
            android:id="@+id/imageView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="@+id/imageView"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_star"
            android:id="@+id/imageView3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintLeft_toLeftOf="@+id/imageView4"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_star"
            android:id="@+id/imageView4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintLeft_toLeftOf="@+id/imageView5"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_star"
            android:id="@+id/imageView5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"/>

        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintLeft_toLeftOf="@+id/textView7"/>
        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"/>
        <TextView
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintLeft_toLeftOf="@+id/textView8"/>
        <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"/>
        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintLeft_toLeftOf="@+id/textView5"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t5"
            app:layout_constraintTop_toTopOf="@+id/p5"
            app:layout_constraintBottom_toBottomOf="@+id/p5"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/p3"
            app:layout_constraintBottom_toBottomOf="@+id/p3"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/p2"
            app:layout_constraintTop_toTopOf="@+id/p2"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t1"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratesNumber"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintLeft_toLeftOf="@+id/ratingBar"
            app:layout_constraintRight_toRightOf="@+id/ratingBar"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_person"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/ratesNumber"
            app:layout_constraintBottom_toBottomOf="@+id/ratesNumber"
            app:layout_constraintLeft_toRightOf="@+id/ratesNumber"/>

        <ProgressBar
            android:progress="30"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/p5"
            android:scaleY="2"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/t5"
            android:layout_marginEnd="8dp"/>

        <ProgressBar
            android:scaleY="2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/p4"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintRight_toLeftOf="@+id/t4"
            android:layout_marginEnd="8dp"/>

        <ProgressBar
            android:scaleY="2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/p3"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView4"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/t3"
            android:layout_marginEnd="8dp"/>

        <ProgressBar
            android:scaleY="2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/p2"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/t2"
            android:layout_marginEnd="8dp"/>

        <ProgressBar
            android:scaleY="2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content"
            android:id="@+id/p1"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/t1"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/branch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/listView"/>

</android.support.constraint.ConstraintLayout>
